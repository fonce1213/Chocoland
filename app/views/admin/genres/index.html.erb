<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h5 class="text-center my-3">ジャンル管理</h5>
		</div>
		<div class="col-md-6 mb-3">
			<h6 class="text-center">ジャンル新規登録</h6>
			<div class="mx-auto">
		  	<%= render 'form', genre: @genre, url: admin_genres_path, submit: '登録' %>
			</div>
		</div>
		<div class="col-md-6 mb-3">
			<h6 class="text-center">ジャンル一覧</h6>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th class="text-center">編集</th>
						<th class="text-center">削除</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= link_to genre.genre_name, admin_post_items_path(genre_id: genre.id), class: "underline" %></td>
							<td class="text-center">
								<%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %>
							</td>
							<td class="text-center">
								<%= link_to "削除", admin_genre_path(genre), method: :delete, class: "btn btn-danger" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>