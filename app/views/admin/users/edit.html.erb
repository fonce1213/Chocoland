会員情報編集

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <td><%= f.label :name, "名前" %></td>
              <td><%= f.text_field :name, :placeholder => "#{@user.name}" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email, :placeholder => "#{@user.email}" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", class: "text-active" %>
                <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会済み", class: "text-invalid" %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= image_tag @user.get_image(200,200) %>
        <%= f.file_field :image, accept: "image/*" %>
        
        <%= f.submit "更新", class: "btn btn-primary" %>
      <% end %>
      
    </div>
  </div>
</div>