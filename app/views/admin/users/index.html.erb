<div class="container">
  <div class="row">
    登録ユーザー一覧
  </div>
  <% @users.each do |user| %>
    <table class="table">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to user.name, admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_deleted? %>
          	  <span class="text-invalid">退会済み</span>	
  				  <% else %>
  					  <span class="text-active">有効</span>
  				  <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

