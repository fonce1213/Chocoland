<div class="container">
  <div class="row">
    <h5 class="my-3">会員情報編集</h5>
    <div class="col-md-8">
      <%= form_with model: @user, url: update_information_path, local: true, html: { class: "mb-3" }, multipart: true do |f| %>
        <div class="form-group row">
          <%= f.label :name, "名前", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control", :placeholder => "#{@user.name}" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :email, class: "form-control", :placeholder => "#{@user.email}" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">プロフィール画像</div>
          <div class="col-sm-9">
            <%= image_tag @user.get_image(200,200), class: "img-thumbnail mb-3" %>
            <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
          </div>
        </div>
        <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
        <%= link_to "退会する", confirm_unsubscribe_path, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>