会員情報編集

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @user, url: update_information_path, local: true do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <td><%= f.label :name, "名前" %></td>
              <td><%= f.text_field :name, :placeholder => "#{@user.name}" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email, :placeholder => "#{@user.email}" %></td>
            </tr>
          </tbody>
        </table>
        <%= image_tag @user.get_image(200,200) %>
        <%= f.file_field :image, accept: "image/*" %>
        
        <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
      <% end %>
      
    </div>
  </div>
</div>