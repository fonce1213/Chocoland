<div class="container">
  <div class="row">
    <% @post_items.each do |post_item| %>
      <div class="col">
        <div class="card" style="width: 30rem;">
          <div class="card-body">
            <p class="card-title"><%= link_to post_item.item_name, post_item_path(post_item.id) %></p>
            <p class="card-subtitle"><%= post_item.shop.shop_name %></p>
            <p class="card-text"><%= post_item.review %></p>
            <p><%= link_to "#{post_item.post_comments.count}コメント", post_item_path(post_item.id) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

