<div class="container">
  <div class="row">
    <div class="col">
      タグが<%= @tag.tag_name %>の投稿一覧
    </div>
    <div class="col">
      <% @tag_list.each do |list| %>
        <%= link_to list.tag_name, tag_post_items_path(tag_id: list.id) %>
        <%= "(#{list.post_items.count})" %>
      <% end %>
    </div>
     <% @post_items.each do |post_item| %>
      <div class="col">
        <div class="card" style="width: 30rem;">
          <div class="card-body">
            <p class="card-title"><%= link_to post_item.item_name, post_item_path(post_item.id) %></p>
            <p class="card-subtitle"><%= post_item.shop.shop_name %></p>
            <p class="card-text"><%= post_item.review %></p>
            <% post_item.tags.each do |tag| %>
              <span><%= link_to tag.tag_name, tag_post_items_path(tag_id: tag.id) %></span> <!-- リンク修正 -->
            <% end %>
            <!--<p class="">< %= post_item.tags.map(&:tag_name).join(',') %></p>-->
            <p><%= link_to "#{post_item.post_comments.count}コメント", post_item_path(post_item.id) %></p>
          </div>
        </div>
      </div>
      
      
      
    <% end %>
    
  </div>
</div>

