<!DOCTYPE html>
<html>
  <head>
    <title>Chocoland</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- ↓bootstrap用 -->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header class="border-bottom">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand">Chocoland</a>
          <div class="row">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-link">
                  レビュー
                </li>
              
              <% elsif user_signed_in? %>
                <li class="nav-link">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn" %>
                </li>
              
              <% else %>
                <li class="nav-link">
                  About
                </li>
                <li class="nav-link">
                  レビュー
                </li>
                <li class="nav-link">
                  <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn" %>
                </li>
                <li class="nav-link">
                  <%= link_to "新規登録", new_user_registration_path, class: "btn" %>
                </li>
                <li class="nav-link">
                  <%= link_to "ログイン", new_user_session_path, class: "btn" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      
    </header>
    <%= notice %>
    <%= yield %>
  </body>
</html>
